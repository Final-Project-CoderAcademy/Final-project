{
  "name": "final-project",
  "version": "1.0.0",
  "description": "MERN full-stack-travel-app",
  "main": "server.js",
  "type": "module",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "start": "node backend/server",
    "server": "nodemon backend/server",
    "install:frontend": "yarn --cwd frontend/ install",
    "install:backend": "yarn --cwd backend/ install",
    "install:all": "yarn install:frontend & yarn install:backend",
    "client": "yarn --cwd frontend/ start",
    "dev": "yarn server & yarn client",
    "api:test": "yarn --cwd backend/ test",
    "frontend:test": "yarn --cwd frontend/ test",
    "data:import": "yarn --cwd backend/seeder data:import",
    "data:destroy": "yarn --cwd backend/seeder data:destroy"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Todd0554/Final-project.git"
  },
  "author": "yuka&&xinzhe",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Todd0554/Final-project/issues"
  },
  "homepage": "https://github.com/Todd0554/Final-project#readme",
  "dependencies": {
    "@babel/plugin-transform-modules-commonjs": "^7.19.6",
    "bcryptjs": "^2.4.3",
    "colors": "^1.4.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-async-handler": "^1.2.0",
    "express-validator": "^6.14.2",
    "helmet": "^6.0.0",
    "jest-environment-jsdom": "^29.3.1",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^6.7.0",
    "multer": "^1.4.5-lts.1",
    "nodemon": "^2.0.20",
    "supertest": "^6.3.1"
  },
  "devDependencies": {
    "jest": "^29.2.2"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverage": true
  }
}
